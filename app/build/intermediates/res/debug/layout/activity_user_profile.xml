        android:text="Added me"
        android:textSize="@dimen/txt_36sp"
        android:id="@+id/tvAddedMe_UserProfile"
        android:drawableLeft="@drawable/ic_user"
        android:layout_marginTop="@dimen/pad_40dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Friends"
        android:textSize="@dimen/txt_36sp"

        android:id="@+id/tvAddFriends_UserProfile"
        android:drawableLeft="@drawable/ic_add_friend"
        android:layout_marginTop="@dimen/pad_50dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Friends"
        android:textSize="@dimen/txt_36sp"
        android:id="@+id/tvMyFriends_UserProfile"
        android:drawableLeft="@drawable/ic_friendslist"
        android:layout_marginTop="@dimen/pad_10dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
