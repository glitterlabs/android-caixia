<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/bg"
              android:orientation="vertical"
                tools:context="com.glitterlabs.caixia.Activities.UserProfileActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/Transparent_50_black"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/pad_180dp"
    android:layout_height="@dimen/pad_180dp"
        android:id="@+id/ivUserProfilePhoto"
        android:src="@drawable/user"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jhon Smith"
        android:textSize="@dimen/txt_27sp"
        android:id="@+id/textView3"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="jhon@smith"

        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Added me"
        android:textSize="@dimen/txt_36sp"
        android:id="@+id/tvAddedMe"
        android:drawableLeft="@drawable/ic_user"
        android:layout_marginTop="@dimen/pad_40dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Friends"
        android:textSize="@dimen/txt_36sp"
        android:id="@+id/tvAddFriends"
        android:drawableLeft="@drawable/ic_add_friend"
        android:layout_marginTop="@dimen/pad_10dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Friends"
        android:textSize="@dimen/txt_36sp"
        android:id="@+id/tvMyFriends"
        android:drawableLeft="@drawable/ic_friendslist"
        android:layout_marginTop="@dimen/pad_10dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
</RelativeLayout>
