<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="com.glitterlabs.caixia.PreviewPhotoActivity">
    <ImageView
        android:id="@+id/ivDisplayPhoto_PreviewPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"

        />

    <ProgressBar
        android:id="@+id/ProgressBar_PreviewPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tvTextMessage_PreviewPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/Transparent_50_black"
        android:gravity="center"
        android:padding="@dimen/pad_5dp"

        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvTimer_PreviewPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:textColor="@color/white"
        android:background="@color/Transparent_50_black"
        android:layout_marginRight="@dimen/pad_10dp"
        android:layout_marginTop="@dimen/pad_10dp"
        android:padding="@dimen/pad_10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/ivCancelPreviewEvent"
        android:layout_width="@dimen/pad_50dp"
        android:layout_height="@dimen/pad_50dp"
        android:layout_gravity="left|center_vertical"
        android:scaleType="fitXY"

        android:src="@drawable/ic_cancel_photo"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignTop="@+id/tvTimer_PreviewPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
